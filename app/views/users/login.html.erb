<div class="container">
  <%= form_for :user, html: {class: 'form-signin'}  do |f| %>
    <h2 class="form-signin-heading">登入</h2>
    <%= f.text_field :student_id, class: 'form-control', placeholder: '學號', required: true, autofocus: true %> 
    <%= f.password_field :password, class: 'form-control', placeholder: '密碼', required: true %>
    <div class="checkbox">
      <label>
        <%= f.check_box :remember %> 記住我
      </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">登入</button>
  <% end %>
  <%= flash[:error].html_safe unless flash[:error].blank? %>
</div>
